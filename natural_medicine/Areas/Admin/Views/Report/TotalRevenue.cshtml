
@{
	ViewBag.Title = "TotalRevenue";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@{
	String date = ViewBag.date;
	DateTime start_date = ViewBag.start_date;
	DateTime end_date = ViewBag.end_date;

	int sumTotal, sumImport, sumOrder;
	if (ViewBag.sumTotal != null)
	{
		sumTotal = ViewBag.sumTotal;
	} else
	{
		sumTotal = 0;
	}

	if (ViewBag.sumImport != null)
	{
		sumImport = ViewBag.sumImport;
	}
	else
	{
		sumImport = 0;
	}
	if (ViewBag.sumOrder != null)
	{
		sumOrder = ViewBag.sumOrder;
	}
	else
	{
		sumOrder = 0;
	}
	
}

<div class="right__content">
	<div class="right__title">Bảng điều khiển</div>
	<p class="right__desc">Tổng Doanh Thu @date</p>
	<div class="container-filter">
		<form method="get" action="/admin/report/totalrevenue">
			<div class="right__inputWrapper">
				<label for="title">Ngày bắt đầu</label>
				<input type="date" name="start_date" id="filter_start">
			</div>
			<div class="right__inputWrapper">
				<label for="desc">Ngày kết thúc</label>
				<input type="date" name="end_date" id="filter_end">
			</div>
			<div style="padding-top:20px;">
				<button style="width:100px;" class="btn" type="submit" id="filter-orders">Tìm kiếm</button>
			</div>
		</form>
	</div>
	<div class="right__table">
		<div class="right__tableWrapper">
			<table>
				<tbody>
					<tr>
						<td style="text-align:left" colspan="2"><strong>Tổng tiền nhập kho: </strong></td>
						<td style="text-align:center;"><strong>@sumImport VNĐ.</strong></td>
					</tr>
					<tr>
						<td style="text-align:left" colspan="2"><strong>Tổng doanh thu: </strong></td>
						<td style="text-align:center"><strong>@sumTotal VNĐ.</strong></td>
					</tr>
					<tr>
						<td style="text-align:left" colspan="2"><strong>Số đơn hàng: </strong></td>
						<td style="text-align:center;"><strong>@sumOrder</strong></td>
					</tr>
				</tbody>
			</table>

		</div>
	</div>
</div>




