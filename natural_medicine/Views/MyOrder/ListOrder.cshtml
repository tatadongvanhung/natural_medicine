
@{
	ViewBag.Title = "ListOrder";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@using natural_medicine.Models
@model List<VIEW_ORDER>

<div class="row" style="height: 100vh;">
	<div class="span12">
		<ul class="breadcrumb">
			<li><a href="/home/index">Trang chủ</a> <span class="divider">/</span></li>
			<li class="active">Theo dõi đơn hàng</li>
		</ul>
		<div class="well well-small">
			<table class="table table-bordered table-condensed table-striped table-hover">
				<thead>
					<tr>
						<th style="text-align:center">STT</th>
						<th style="text-align:center">Mã đơn</th>
						<th style="text-align:center">Ngày mua</th>
						<th style="text-align:center">Tổng tiền</th>
						<th style="text-align:center">Địa chỉ</th>
						<th style="text-align:center">Trạng thái</th>
						<th style="text-align:center">Xem</th>
					</tr>
				</thead>
				<tbody>
					@{
						if (Model != null)
						{
							int i = 0;
							foreach (VIEW_ORDER it in Model)
							{
								i++;
								<tr>
									<td style="text-align:center;">@i</td>
									<td style="text-align:center;">@it.id</td>
									<td style="text-align:center;">@it.create_at</td>
									<td style="text-align:center;">@it.total</td>
									<td style="text-align:center;">@it.address</td>
									<td style="text-align:center;">@it.status</td>
									<td style="text-align:center;">
										<a style="text-decoration: none;" href="/myorder/orderdetail/@it.id"><span class="icon-edit"></span></a>
									</td>
								</tr>

							}
						}
						else
						{
							<tr>
								<td style="text-align:center;" colspan="7" class="alignR"><strong>DANH SÁCH ĐƠN HÀNG TRỐNG!</strong></td>
							</tr>
						}
					}
				</tbody>
			</table>
		</div>
	</div>
</div>

